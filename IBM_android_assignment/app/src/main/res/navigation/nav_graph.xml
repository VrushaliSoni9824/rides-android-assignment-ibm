<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/startFragment">
        <fragment
            android:id="@+id/startFragment"
            android:name="com.ibm.rides.ui.fragments.FirstFragment"
            android:label="@string/app_name"
            tools:layout="@layout/fragment_first">
            <action
                android:id="@+id/action_startFragment_to_endFragment"
                app:destination="@id/endFragment" />
        </fragment>
        <fragment
            android:id="@+id/endFragment"
            android:name="com.ibm.rides.ui.fragments.SecondFragment"
            android:label="@string/vehicle_detail"
            tools:layout="@layout/fragment_second">
            <action
                android:id="@+id/action_endFragment_to_startFragment"
                app:destination="@id/startFragment"
                app:popUpTo="@id/startFragment"
                app:popUpToInclusive="true" />
        </fragment>
</navigation>
